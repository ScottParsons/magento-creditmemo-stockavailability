<config>
    <sections>
        <cataloginventory>
            <groups>
                <item_options>
                    <fields>
                        <update_stockavailability translate="label">
                            <label>Update Product Stock Availability</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[When the <code>Automatically Return Credit Memo Item to Stock</code> option is enabled and
the item is returned to stock, any items that were set to Out of Stock will be set to In Stock]]></comment>
                        </update_stockavailability>
                    </fields>
                </item_options>
            </groups>
        </cataloginventory>
    </sections>
</config>
